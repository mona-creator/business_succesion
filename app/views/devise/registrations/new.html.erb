<h1>Business Succession</h1>

<div class="col-xs-6 col-xs-offset-3">


<h2>無料会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :名前 %><br />
    <%= f.label :姓%>
    <%= f.text_field :surname, autofocus: true, autocomplete: "surname", placeholder:"Last name" %>
    <%= f.label :名%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"First name" %>
  </div>

  <div class="field form-group">
    <%= f.label :フリガナ %><br />
    <%= f.label :姓 %>
    <%= f.text_field :surname_kana, autofocus: true, autocomplete: "surname_kana", placeholder:"Last name" %>
    <%= f.label :名%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_kana", placeholder:"First name" %>
  </div>

  <div class="field form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email Address" %>
  </div>

  <div class="field form-group">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",placeholder:"Postal Code" %>
  </div>

  <div class="field form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address",placeholder:"Address" %>
  </div>

  <div class="field form-group">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number",placeholder:"Phone Number" %>
  </div>


  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password",placeholder:"Password" %>
  </div>

<!--パスワード確認入力フォーム-->
  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm",placeholder:"Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>