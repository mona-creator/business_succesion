					<%= f.label :純資産, class: "col-sm-3" %>
				    <%= f.select :net_asset,[['0万円～500万円', "1"],['500万円～1000万円', "2"],['1000万円～1500万円', "3"],['1500万円～2000万円', "4"],['2000万円～2500万円', "5"],['2500万円～3000万円', "6"],['3000万円以上', "7"]] %>
