<%= render 'layouts/header' %>
    <div class="col-xs-offset-1 col-xs-10">
        <h2>気になるランキング</h2>
        <% @sorted_companies.each.with_index(1) do |company, i| %>
		    <table class="table table-bordered">
			    <thead>
				    <tr>
						<th class="active">業種</th>
						<th class="active">売上高</th>
						<th class="active">営業利益</th>
						<th class="active">売却希望価格</th>
						<th class="active">所在地</th>
  				    </tr>
			    </thead>
		        <h2>第<%= i %>位<%= link_to  company.company_name, company, class: "company_#{company.id}" %></h2>
		        <div>
			        <span id="favorites_buttons_<%= company.id %>">
			            <%= render partial: 'favorites/favorite', locals: { company: company} %>
			        </span>
			        <%= company.company_comments.count %>件コメント
		        </div>
		    	<tbody>
				    <td><%= company.industry %></td>
　　　　　　　　　　　<td><% if company.sale == 1 then %>
							    0万円～500万円
						<% elsif company.sale == 2 then %>
							    500万円～1000万円
						<% elsif company.sale == 3 then %>
							    1000万円～1500万円
						<% elsif company.sale == 4 then %>
							    1500万円～2000万円
						<% elsif company.sale == 5 then %>
							    2000万円～2500万円
					    <% elsif company.sale == 6 then %>
							    2500万円～3000万円
						<% elsif company.sale == 7 then %>
							    3000万円以上
						<% else %>
						<% end %>
					</td>
					<td><% if company.operating_income == 1 then %>
							    0万円～500万円
						<% elsif company.operating_income == 2 then %>
							    500万円～1000万円
						<% elsif company.operating_income == 3 then %>
							    1000万円～1500万円
						<% elsif company.operating_income == 4 then %>
							    1500万円～2000万円
						<% elsif company.operating_income == 5 then %>
							    2000万円～2500万円
					    <% elsif company.operating_income == 6 then %>
							    2500万円～3000万円
						<% elsif company.operating_income == 7 then %>
							    3000万円以上
						<% elsif company.operating_income == 8 then %>
							    赤字
						<% else %>
						<% end %>
					</td>
					<td><% if company.disposal_desired_price == 1 then %>
						　　　　　0万円～500万円
						<% elsif company.disposal_desired_price == 2 then %>
						　　　　　500万円～1000万円
						<% elsif company.disposal_desired_price == 3 then %>
						　　　　　1000万円～1500万円
						<% elsif company.disposal_desired_price == 4 then %>
						　　　　　1500万円以上
						<% else %>
						<% end %>
					</td>
				    <td><%= company.prefecture_name %></td>
		        </tbody>
		    </table>
		<% end %>