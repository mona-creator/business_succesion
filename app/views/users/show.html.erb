<%= render 'layouts/header' %>
    <div class="row">
	    <div class="col-xs-offset-1 col-xs-8">
            <h2>マイページ</h2>
			<table>
				<th>登録情報</th>
				<td><%= link_to "Edit", edit_user_path, class: "btn btn-primary mypage-btn-1" %></td>
			</table>
			<table class="table table-bordered mypage-table">
				<tbody>
					<tr>
						<td class="active", style="width:150px">氏名</td>
						<td><%= @user.surname %><%= @user.first_name %></td>
					</tr>
					<tr>
						<td class="active">カナ</td>
						<td><%= @user.surname_kana %><%= @user.first_name_kana %></td>
					</tr>
					<tr>
						<td class="active">郵便番号</td>
						<td><%= @user.postal_code %></td>
					</tr>
					<tr>
						<td class="active">住所</td>
						<td><%= @user.address %></td>
					</tr>
					<tr>
						<td class="active">電話番号</td>
						<td><%= @user.phone_number %></td>
					</tr>
					<tr>
						<td class="active">メールアドレス</td>
						<td><%= @user.email %></td>
					</tr>
				</tbody>
			</table>
            <h2>投稿企業一覧</h2>
		        <% @user.companies.each do |company| %>
					<table class="table table-bordered">
						<thead>
							<tr>
								<th class="active">業種</th>
								<th class="active">売上高</th>
								<th class="active">営業利益</th>
								<th class="active">売却希望価格</th>
								<th class="active">所在地</th>
							</tr>
						</thead>
		         	    <h2><%= link_to  company.company_name, company, class: "company_#{company.id}" %></h2>
		                    <div id="favorites_buttons_<%= company.id %>">
		                        <%= render partial: 'favorites/favorite', locals: { company: company} %>
		         	            <%= company.company_comments.count %>件コメント
		                    </div>
		                <tbody>
						    <td><%= company.industry %></td>
						    <td><%= company.sale %></td>
						    <td><%= company.operating_income %></td>
						    <td><%= company.disposal_desired_price %></td>
						    <td><%= company.company_address %></td>
		                </tbody>
		            </table>
		        <% end %>
		</div>
	</div>