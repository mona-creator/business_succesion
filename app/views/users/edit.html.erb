<h2>登録情報編集</h2>

<%= form_for(@user, url: "/users/#{@user.id}") do |f| %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :姓%>
    <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
    <%= f.label :名%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.label :姓 %>
    <%= f.text_field :surname_kana, autofocus: true, autocomplete: "surname_kana" %>
    <%= f.label :名%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_kana" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する",class: "btn btn-success" %>
  </div>
<% end %>