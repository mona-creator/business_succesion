<%= render 'layouts/header' %>
    <div class="col-xs-8 col-xs-offset-1">
      <h2 class="mypage-headline">登録情報編集</h2>
        <%= form_for(@user, url: "/users/#{@user.id}") do |f| %>

        <!-- エラーメッセージ表示-->
          <% if @user.errors.any? %>
         <h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
         <ul>
             <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
             <% end %>
         </ul>
        <% end %>
            <!-- エラーメッセージ表示-->

          <div class="row field form-group">
            <%= f.label :名前, class: "col-sm-3" %>
            <div class="col-sm-4">
              <%= f.label :姓 %>
              <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
            </div>
            <div class="col-sm-4">
              <%= f.label :名 %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </div>
          <div class="row field form-group">
            <%= f.label :フリガナ, class: "col-sm-3" %>
            <div class="col-sm-4">
              <%= f.label :姓 %>
              <%= f.text_field :surname_kana, autofocus: true, autocomplete: "surname_kana" %>
            </div>
            <div class="col-sm-4">
              <%= f.label :名 %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </div>
          <div class="row field form-group">
            <%= f.label :メールアドレス, class: "col-sm-3" %>
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
            </div>
          </div>
          <div class="row field form-group">
            <%= f.label :郵便番号（ハイフンなし）, class: "col-sm-3" %>
            <div class="col-sm-6">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </div>
          <div class="row field form-group">
            <%= f.label :住所, class: "col-sm-3" %>
            <div class="col-sm-8">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "input-field" %>
            </div>
          </div>
          <div class="row field form-group">
            <%= f.label :電話番号（ハイフンなし）, class: "col-sm-3" %>
            <div class="col-sm-4">
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "編集内容を保存する",class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>